{
  "name": "quick-bookmarks-menu",
  "version": "0.5.2",
  "description": "A chrome extension gives you quick access to your bookmarks.",
  "main": "src/qbm.html",
  "scripts": {
    "predev": "npm run clean",
    "dev": "npm run build:static && npm run build:js -- --sourcemap=inline --watch",
    "prebuild": "npm run clean",
    "build": "npm run build:static && npm run build:js -- --analyze",
    "prepack": "npm run build",
    "pack": "7z a build/build.zip ./build/*",

    "clean": "rm -rf build/*",
    "build:static": "cp -r public/. build/",
    "build:js": "esbuild src/qbm.jsx src/background.js --bundle --format=esm --minify --keep-names --target=chrome86 --jsx-factory=h --jsx-fragment=Fragment --outdir=build"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flyhaozi/Quick-Bookmarks-Menu.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flyhaozi/Quick-Bookmarks-Menu/issues"
  },
  "homepage": "https://github.com/flyhaozi/Quick-Bookmarks-Menu#readme",
  "dependencies": {
    "goober": "^2.0.41",
    "preact": "^10.5.14"
  },
  "devDependencies": {
    "esbuild": "^0.13.4"
  }
}
